generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String @id @default(uuid())
  email        String @unique
  name         String
  age          Int?
  authoredPost Post[] @relation("authoredPost")
  favdPost     Post[] @relation("favdPost")
}

model Post {
  id         String     @id @default(uuid())
  title      String
  rating     Float
  content    String
  imageURL   String?
  author     User       @relation("authoredPost", fields: [authorId], references: [id])
  authorId   String
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  favdBy     User?      @relation("favdPost", fields: [favdById], references: [id])
  favdById   String?
  categories Category[]
  slug       String     @unique
}

model Category {
  id    String @id @default(uuid())
  posts Post[]
  name  String @unique
  slug  String @unique
}
